page{
  background-color: #f5f5f5;
}
.search{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
  border: 1px solid e6eaed;
  width: 100%;
  margin: 0 auto;
  border-radius: 5rpx;
  position: fixed;
  top:0;
  border-bottom: 1px solid #666666;
}
.search image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.search_input{
  width: 80%;
  height: 40px;
  padding: 14rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}
.Classification_table_left{
  width: 88%;
}
.classtable_title{
  background-color:#FFC800;
  padding: 10rpx 0 10rpx 24rpx;
  color: #ffffff;
  font-weight: bold;
}
.classtable_content{
  display: flex;
  flex-direction: row;
  /* justify-content: center; */
  align-items: center;
  flex-wrap: wrap;
}
.classtable_content1{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 33%;
  height: 220rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #eaeaea;
  border-right: 1rpx solid #eaeaea;
}
.classtable_content1 image{
  width: 120rpx;
  height: 120rpx;
}
.Classification_table{
  display: flex;
  flex-direction: row;
  margin-top: 96rpx;
}
.Classification_table_right{
  width: 11%;
  text-align: center;
  font-size: 22rpx;
  position: fixed;
  right: 0;
  height: 100%;
}
.letter{
  height: 3.3%;
  color: #3681bb;
}