/* pages/main/address/address.wxss */
page {
  background-color: #f5f5f5;
}
.address {
  margin: 20rpx 15rpx;
  box-shadow:5rpx 4rpx 10rpx #666;
  border-radius: 20rpx;
  overflow: hidden;
}

.address_one_top {
  background-color: #FFC800;
  color: #ffffff;
  padding: 15rpx 20rpx;
  box-sizing: border-box;
  font-weight: bolder;
  text-shadow: #000000 0 0 8rpx;
  font-size: 34rpx;
  display: flex;
  justify-content: space-between;
}
.address_one_top_name {
  display: block;
}
.address_one_top_phone {
  font-size: 30rpx;
  display: block;
}
.address_one_bot {
  padding: 20rpx 20rpx;
  box-sizing: border-box;
}
.address_two {
  padding:15rpx 20rpx;
  display: flex;
  justify-content: space-between;
  border-top: 1px solid #999999;
}
.address_two_left {
  height: 40rpx;
  display: flex;
}
.address_two_left image {
  width: 30rpx;
  height: 30rpx;
  display: block;
  margin-right: 10rpx;
  margin-top: 5rpx;
}
.address_two_left text {
  font-size: 26rpx;
  color: #353535;
  line-height: 40rpx;
  display:block;
}
.address_two_right {
  display: flex;
  height: 40rpx;
}
.address_two_right image {
  width: 30rpx;
  height: 30rpx;
  display: block;
  margin-left: 40rpx;
  margin-top: 5rpx;
}
.address_add {
  width: 100%;
  height: 100rpx;
  background-color: #FEB400;
  font-size: 32rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 100rpx;
  position: absolute;
  bottom:0;
  left:0;
  font-weight: bolder;
  text-shadow: #000000 0 0 8rpx;
}
.cont{
  text-align: center;
  font-weight: bolder;
  color: #999999;
  font-size: 40rpx;
}