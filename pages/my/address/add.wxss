/* pages/main/address/add.wxss */
page {
  background-color: #f5f5f5;
}
.apply {
  width: 100%;
  display: table;
  background-color: #ffffff;
}
.bank_one{
  margin: 40rpx 15rpx;
  overflow: hidden;

}
.bank_one_left{
  background-color: #FEB400;
  width: 100%;
  font-size: 34rpx;
  color: #ffffff;
  padding: 15rpx 20rpx;
  box-sizing: border-box;
  font-weight: bolder;
  text-shadow: #000000 0 0 8rpx;
  
}
.bank_one_right{
  font-size: 28rpx;
  padding: 15rpx 20rpx;
  border-right: 5rpx solid #FEB400;
  border-bottom: 5rpx solid #FEB400;
  
}
.bank_one_address {
  width:100%;
  height: 90rpx;
  display: flex;
}
.bank_one_right_input {
  color: #1E1E1E;
  display: block;
}
.picker {
  padding:0;
  background-color:#fff;
}
.sure_btn {
  width: calc(100% - 60rpx);
  left:30rpx;
  background-color: #07c160;
  font-size: 32rpx;
  color: #ffffff;
  text-align: center;line-height: 90rpx;
  height: 90rpx;
  position: fixed;
  bottom: 40rpx;
  border-radius: 20rpx;
  box-shadow:5rpx 4rpx 10rpx #666;
  font-weight: bolder;
}