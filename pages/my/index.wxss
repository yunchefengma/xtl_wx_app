/* pages/main/main.wxss */
page {
  background-color: #f5f5f5;
  width: 100%;
  padding: 0 30rpx;
}
.main_top {
  width: 100%;
  margin-top: 30rpx;
  height: 260rpx;
  background: -webkit-linear-gradient(#FFC800,#FFC800);
  background: -o-linear-gradient(#FFC800,#FFC800);
  background: -moz-linear-gradient(#FFC800,#FFC800);
  background: -mos-linear-gradient(#FFC800,#FFC800);
  background: linear-gradient(#FFC800,#FFC800);
  position: relative;
  display: table;
}
.main_top_two {
  width: 100%;
  height: 80rpx;
  background-color: #FFC800;
  border-bottom-right-radius:60%;
  border-bottom-left-radius: 60%;
}
.main_top_img {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  overflow: hidden;
  margin:0 auto;
  margin-top: 30rpx;
}

.main_top_img2 {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  overflow: hidden;
  margin:0 auto;

}

.main_top_name {
  width: 100%;
  margin-top: 30rpx;
  text-align: center;
}
.wexin_one {
  font-size: 30rpx;
  color: #F3F3F3;
  text-align: center;
  line-height: 40rpx;
}
.main_top_jifen {
  font-size: 28rpx;
  color: #F3F3F3;
  text-align: center;
  line-height: 40rpx;
  margin-top: 30rpx;
}
.main_top_apply {
  position: absolute;
  top:30rpx;
  right: 20rpx;
  display: flex;
  height: 40rpx;
}
.main_top_apply image {
  width: 22rpx;
  height: 20rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
}
.main_top_apply text {
  font-size: 24rpx;
  color: #FFFFFF;
  line-height: 40rpx;
}
.main_menu {
  width: 100%;
  display: table;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  border-radius: 15rpx;
  overflow: hidden;
}

/* 九宫格 */
.main_menu_one {
  width: calc(33.33% - 2rpx);
  height: 250rpx;
  background-color: #ffffff;
  border-bottom: 2rpx solid #f5f5f5;
  border-right: 2rpx solid #f5f5f5;
  float: left;
}
.main_menu_one_img {
  width: 90rpx;
  height: 90rpx;
  margin:0 auto;
  margin-top: 50rpx;
}
.main_menu_one_text {
  font-size: 28rpx;
  color: #222222;
  text-align: center;
  display: block;
  margin-top: 20rpx;
}
