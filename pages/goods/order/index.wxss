/*底部*/
.bottom_tool{
  position: fixed;
  left: 0;
  bottom: 0 ;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}
.bottom_tool .tool_item{
  flex: 1;
  display: flex;/*伸缩盒子，让她在一行显示*/
  flex-direction: column;/*改变主轴的方向，由横向变竖向*/
  justify-content: center;/*让元素进行垂直居中*/
  align-items: center;/*让元素进行水平居中*/
  position: relative;/*相对定位*/
}
.bottom_tool .tool_item button{
  position:absolute;
  top: 0;/*紧贴上边*/
  left: 0;/*紧贴左边*/
  width: 100%;/*跟父元素一样宽*/
  height: 100%;/*跟父元素一样高*/
  opacity: 0;/*透明度为0*/
}
.bottom_tool .btn_buy{
  flex:2;
  display: flex;/*伸缩盒子，让她在一行显示*/
  flex-direction: column;/*改变主轴的方向，由横向变竖向*/
  justify-content: center;/*让元素进行垂直居中*/
  align-items: center;/*让元素进行水平居中*/
  color: #fff;
  background-color: red;
  font-size: 30rpx;
  font-weight: 600;/*字体加粗*/
}



