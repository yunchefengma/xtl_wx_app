/**app.wxss**/
@import "./styles/iconfont.wxss";
@import "/pages/wxParse/wxParse.wxss";

page,view,text,swiper,swiper-item,img,navigator{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  
}
/** 初始化page标签样式**/
page{
  /***** 定义主题颜色 *****/
  --themeColor:#FFC800;
  background-color: #F3F3F3;
  font-size: 28rpx;
}

image {
  display: block;
  width: 100%;
}


/* 订单 */
.service_top {
  width: 100%;
  height: 100rpx;
  border-bottom: 2rpx solid #EEEEEE;
  display: flex;
  background-color: #ffffff;
}
.service_top_one {
  width: 20%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.service_top_one text {
  display: block;
  padding: 10rpx 0;
  text-align: center;
  font-size: 28rpx;
}
.service_top_one_moren {
  color: #222222;
}
.service_top_one_active {
  color: #FEB400;
  border-bottom: 2rpx solid #FEB400;
}
.service_next {
  width:12rpx !important;
  height:18rpx !important;
  margin-top:20rpx !important;
}

